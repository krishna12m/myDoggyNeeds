@model IEnumerable<MyDoggyNeeds.Models.Dog>

@{
    ViewBag.Title = "Index";
}
<style>
    .mybtn{
     /*   margin-top:15px;*/
    }
</style>
<h2>Profile</h2>

<p>
    @Html.ActionLink("Add Another Dog", "Create" ,null, new { @class = "mybtn"})
</p>
<table class="table  table-bordered" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner.Fname)
            </th>
            <th>CRUD</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Breed)
                </td>
                <td>

                    <img src="~/Content/Images/@Html.DisplayFor(m=> item.Image)" alt="@Html.DisplayFor(m => item.Image)" width="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Owner.Fname)
                </td>
                <td>
                   @Html.ActionLink("Edit", "Edit", new { id = item.Id } ,new { @class = "mybtn"}) 
                    @Html.ActionLink("Details", "Details", new { id = item.Id },new { @class = "mybtn" }) 
                  @Html.ActionLink("Delete", "Delete", new { id = item.Id },new { @class = "mybtn" })
                </td>
    </tr>
    }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });

</script>
