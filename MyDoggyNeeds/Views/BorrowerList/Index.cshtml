@model IEnumerable<MyDoggyNeeds.Models.Borrower>

@{
    ViewBag.Title = "Index";
}



<div>
    <h2>Borrowers in Database</h2>
    <div>
        <h4> We have @Model.Count() borrowers in the  Database.</h4>
    </div>
</div>
<table class="table  table-bordered" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fname)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Lname)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Line1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Postcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.AspNetUsers.Email)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Needs)

            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fname)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Lname)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Dob)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Line1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Postcode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Identity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
                    </td>*@
                <td>
                    @Html.ListBox("Id", new SelectList(item.Needs, "Id", "Name"))
                </td>

            </tr>
        }
    </tbody>

</table>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });

</script>
