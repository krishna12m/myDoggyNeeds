@model IEnumerable<MyDoggyNeeds.Models.Dog>

@{
    ViewBag.Title = "Index";
}


<div>
    <h2>Dogs in Database</h2>
    <div>
        <h4>We have @Model.Count() Dogs in the  Database.</h4>
    </div>
</div>
<table class="table  table-bordered" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Owned by
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner.Postcode)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Owner.Needs)
            </th>
            <th>Details</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Breed)
            </td>
            <td>
                <img src="~/Content/Images/@Html.DisplayFor(m=> item.Image)" alt="@Html.DisplayFor(m => item.Image)" width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.Fname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.Postcode)
            </td>

            <td>
                @Html.ListBox("Id", new SelectList(item.Owner.Needs, "Id", "Name"))
            </td>
            <td>
                <button > @Html.ActionLink("Check Owner's Details", "Details", new { id = item.Id }, new { @style = "font-weight:bold;" }) </button>

            </td>

        </tr>
        }
    </tbody>

</table>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });

</script>



